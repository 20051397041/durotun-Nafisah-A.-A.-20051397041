#include <iostream>
  
using namespace std;
  
int main() {
    int i,j,n;
 	cout<< "segitiga Angka Berulang\n\n";
    cout<< "Masukkan Tinggi Segitiga: ";
    cin >> n;
 
    for (i=1;i<=n;i++) 
	{
        for (j=1;j<=i;j++) 
		{
            cout <<""<<j;
        }
        cout << endl;
	}	
    for (i=n-1;i>=1;i--)
  {
		for (j=1;j<=i;j++)	
		{
			cout <<""<<j;
		}
      cout << endl;
  }
    return 0;
}
